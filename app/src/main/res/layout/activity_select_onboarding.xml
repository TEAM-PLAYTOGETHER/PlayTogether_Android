<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_second_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.onboarding.SecondOnboardingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_second_onboarding_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_black"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_second_onboarding_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_icn_back" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view_second_onboarding_progressbar_green"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rectangle_fill_green_radius_0"
            app:layout_constraintEnd_toStartOf="@+id/view_second_onboarding_progressbar_gray"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_second_onboarding_top" />


        <View
            android:id="@+id/view_second_onboarding_progressbar_gray"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rectangle_fill_gray3_radius_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/view_second_onboarding_progressbar_green"
            app:layout_constraintTop_toBottomOf="@+id/cl_second_onboarding_top" />

        <TextView
            android:id="@+id/tv_second_onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_start_thunder"
            android:textColor="@color/gray_black"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_second_onboarding_progressbar_green" />


        <TextView
            android:id="@+id/tv_second_onboarding_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_select_option"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_black02"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/tv_second_onboarding_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_second_onboarding_title" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_second_onboarding_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/selector_rectangle_border_gray0_to_black01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_second_onboarding_sub_title">

            <TextView
                android:id="@+id/tv_second_onboarding_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="@string/text_open"
                android:textColor="@drawable/selector_text_gray01_to_black01"
                android:textSize="16dp"
                android:layout_marginTop="23dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_second_onboarding_open_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/onboarding_open_message"
                android:textColor="@drawable/selector_text_gray01_to_black01"
                android:textSize="14dp"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_second_onboarding_open"
                app:layout_constraintTop_toBottomOf="@+id/tv_second_onboarding_open" />

            <ImageView
                android:id="@+id/iv_second_onboarding_open_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icn_select"
                android:layout_marginEnd="24dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_second_onboarding_join_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rectangle_border_gray0_to_black01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_second_onboarding_open">

            <TextView
                android:id="@+id/tv_second_onboarding_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="@string/text_join"
                android:textColor="@drawable/selector_text_gray01_to_black01"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_second_onboarding_join_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/onboarding_join_message"
                android:textColor="@drawable/selector_text_gray01_to_black01"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_second_onboarding_join"
                app:layout_constraintTop_toBottomOf="@+id/tv_second_onboarding_join" />

            <ImageView
                android:id="@+id/iv_second_onboarding_join_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icn_select"
                android:layout_marginEnd="24dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_second_onboarding_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:background="@drawable/selector_rectangle_fill_gray02_to_fill_green"
            android:fontFamily="@font/pretendard_bold"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="@string/text_next"
            android:textAlignment="center"
            android:textColor="@drawable/selector_text_gray01_to_black01"
            android:textSize="15dp"
            android:visibility="visible"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>