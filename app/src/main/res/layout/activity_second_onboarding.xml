<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_first_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.onboarding.SecondOnboardingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_first_onboarding_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_black"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_first_onboarding_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_icn_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view_first_onboarding_progressbar_green"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rectangle_fill_green_radius_0"
            app:layout_constraintEnd_toStartOf="@+id/view_first_onboarding_progressbar_gray"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_first_onboarding_top" />


        <View
            android:id="@+id/view_first_onboarding_progressbar_gray"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rectangle_fill_gray3_radius_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/view_first_onboarding_progressbar_green"
            app:layout_constraintTop_toBottomOf="@+id/cl_first_onboarding_top" />

        <TextView
            android:id="@+id/tv_first_onboarding_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_start_thunder"
            android:textColor="@color/gray_black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_first_onboarding_progressbar_green" />


        <TextView
            android:id="@+id/tv_firt_onboarding_request_mbti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_select_option"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_black02"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_first_onboarding_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_first_onboarding_name" />


        <TextView
            android:id="@+id/tv_first_onboarding_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_fill_gray03_border_gray02_radius_10"
            android:text="@string/text_next"
            android:textAlignment="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:textColor="@color/gray_gray01"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="15sp"
            android:visibility="visible"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cl_first_onboarding_mbti"
            app:layout_constraintStart_toStartOf="@+id/cl_first_onboarding_mbti" />

        <TextView
            android:id="@+id/tv_first_onboarding_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_fill_green_border_black_radius_10"
            android:text="@string/text_get_start"
            android:textAlignment="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:textColor="@color/gray_black"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cl_first_onboarding_mbti"
            app:layout_constraintStart_toStartOf="@+id/cl_first_onboarding_mbti" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>