<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_delete_mycrew_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_black"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="14dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_delete_mycrew_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_delete_mycrew_top"
            app:layout_constraintBottom_toTopOf="@+id/cl_delete_mycrew_bottom">

            <TextView
                android:id="@+id/tv_crewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                tools:text="SOPT"
                android:textColor="@color/gray_black"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/tv_delete_crew_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/delete_crew_title"
                android:textColor="@color/gray_black"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="@id/tv_crewName"
                app:layout_constraintTop_toBottomOf="@id/tv_crewName"
                android:bufferType="spannable"/>


            <TextView
                android:id="@+id/tv_delete_crew_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/delete_crew_content"
                android:textColor="@color/gray_black"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/tv_delete_crew_title"
                app:layout_constraintStart_toStartOf="@id/tv_delete_crew_title"
                android:layout_marginTop="16dp"
                android:bufferType="spannable"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_delete_mycrew_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_delete_crew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_red_radius_10dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="@string/string_do_quit"
                android:textColor="@color/red_FF0000"
                android:textSize="16sp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="36dp"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="18dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>