<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="User"
            type="com.playtogether_android.domain.model.sign.SignInData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_first_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.onboarding.FirstOnBoardingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_first_onboarding_top"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/gray_black"
            app:layout_constraintTop_toTopOf="parent"/>


        <View
            android:id="@+id/view_first_onboarding_progressbar_green"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rectangle_fill_green_radius_0"
            app:layout_constraintEnd_toStartOf="@+id/view_first_onboarding_progressbar_gray"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_first_onboarding_top" />


        <View
            android:id="@+id/view_first_onboarding_progressbar_gray"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/rectangle_fill_gray3_radius_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintStart_toEndOf="@+id/view_first_onboarding_progressbar_green"
            app:layout_constraintTop_toBottomOf="@+id/cl_first_onboarding_top" />

        <TextView
            android:id="@+id/tv_first_onboarding_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="@{User.userName}"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/gray_black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_first_onboarding_progressbar_green"
            tools:text="이혜빈" />

        <TextView
            android:id="@+id/tv_firt_onboarding_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_user"
            android:textColor="@color/gray_black"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/tv_first_onboarding_name"
            app:layout_constraintTop_toBottomOf="@+id/view_first_onboarding_progressbar_green" />

        <TextView
            android:id="@+id/tv_firt_onboarding_request_mbti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4dp"
            android:text="@string/onboarding_mbti"
            android:textColor="@color/gray_black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/tv_first_onboarding_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_first_onboarding_name" />

        <TextView
            android:id="@+id/tv_first_onboarding_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@string/onboarding_select_mbti"
            android:textColor="@color/gray_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_first_onboarding_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_firt_onboarding_request_mbti" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_first_onboarding_mbti"
            android:layout_width="0dp"
            android:layout_marginTop="98dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_first_onboarding_select"
            app:layout_constraintTop_toBottomOf="@+id/tv_first_onboarding_select">

            <RadioGroup
                android:id="@+id/rg_first_onboarding_first_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cl_first_onboarding_mbti"
                app:layout_constraintTop_toTopOf="parent">


                <RadioButton
                    android:id="@+id/radio_E"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_e"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

                <RadioButton
                    android:id="@+id/radio_I"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_i"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

            </RadioGroup>


            <RadioGroup
                android:id="@+id/rg_first_onboarding_second_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rg_first_onboarding_first_mbti"
                app:layout_constraintEnd_toStartOf="@+id/rg_first_onboarding_third_mbti"
                app:layout_constraintTop_toTopOf="parent">


                <RadioButton
                    android:id="@+id/radio_N"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_n"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

                <RadioButton
                    android:id="@+id/radio_S"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_s"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_first_onboarding_third_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rg_first_onboarding_forth_mbti"
                app:layout_constraintStart_toEndOf="@+id/rg_first_onboarding_second_mbti"
                app:layout_constraintTop_toTopOf="parent">


                <RadioButton
                    android:id="@+id/radio_F"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_f"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

                <RadioButton
                    android:id="@+id/radio_T"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_t"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_first_onboarding_forth_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RadioButton
                    android:id="@+id/radio_P"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_p"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

                <RadioButton
                    android:id="@+id/radio_J"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_rectangle_gray01_to_black01_check"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/pretendard_medium"
                    android:gravity="center"
                    android:text="@string/onboarding_j"
                    android:textColor="@drawable/selector_text_gray01_to_main_green_check"
                    android:textSize="40sp" />

            </RadioGroup>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_first_onboarding_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_fill_gray03_border_gray02_radius_10"
            android:text="@string/text_next"
            android:textAlignment="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:textColor="@color/gray_gray01"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="15sp"
            android:visibility="visible"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cl_first_onboarding_mbti"
            app:layout_constraintStart_toStartOf="@+id/cl_first_onboarding_mbti" />

        <TextView
            android:id="@+id/tv_first_onboarding_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_fill_green_border_black_radius_10"
            android:text="@string/text_get_start"
            android:textAlignment="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:textColor="@color/gray_black"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="15sp"
            android:visibility="invisible"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cl_first_onboarding_mbti"
            app:layout_constraintStart_toStartOf="@+id/cl_first_onboarding_mbti" />

        <TextView
            android:id="@+id/tv_first_onboarding_relevant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/text_no_relevant"
            android:textColor="@color/gray_gray01"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_first_onboarding_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>