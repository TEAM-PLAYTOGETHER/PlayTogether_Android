<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    HomeFragment-->
    <style name="home_image_text">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="home_title_text">
        <item name="android:textColor">@color/main_green</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="home_more_text">
        <item name="android:textColor">#666666</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="home_category">
        <item name="android:textColor">@color/gray_black</item>
        <item name="fontFamily">@font/pretendard_extrabold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--    ThunderListActivity-->
    <style name="thunder_tool_title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="thunder_title">
        <item name="android:textColor">@color/gray_black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="thunder_align">
        <item name="android:textColor">@color/gray_gray01</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="thunder_item_title">
        <item name="android:textColor">@color/main_green</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="thunder_item_date">
        <item name="android:textColor">@color/gray_gray03</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="thunder_item_people">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/gray_gray02</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  BottomDialog  -->
    <style name="BottomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="home_dialog_bold_title">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="home_dialog_normal_title">
        <item name="android:textColor">@color/gray_gray02</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="home_dialog_button_text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

<!--    homefargment item-->
    <style name="home_item_title">
        <item name="android:textColor">@color/main_green</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="home_item_btn_text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="home_item_about">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
    </style>



</resources>